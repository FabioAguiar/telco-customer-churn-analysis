{
  "infer_types": true,
  "cast_numeric_like": true,
  "strip_whitespace": true,
  "handle_missing": true,
  "missing_strategy": "simple",
  "detect_outliers": true,
  "outlier_method": "iqr",
  "outliers": {
    "cols": null,
    "exclude_cols": [
      "customerID"
    ],
    "exclude_binaries": true,
    "iqr_factor": 1.5,
    "z_threshold": 3.0,
    "persist_summary": true,
    "persist_relpath": "outliers/summary.csv"
  },
  "deduplicate": {
    "subset": null,
    "keep": "first",
    "log_enabled": true,
    "log_relpath": "duplicates.csv"
  },
  "deduplicate_subset": null,
  "deduplicate_keep": "first",
  "deduplicate_log": true,
  "deduplicate_log_filename": "duplicates.csv",
  "encode_categoricals": true,
  "encoding_type": "onehot",
  "scale_numeric": false,
  "scaler": "standard",
  "date_features": true,
  "text_features": true,
  "feature_engineering": {
    "enable_default_rules": true,
    "log1p_cols": [],
    "ratios": [],
    "binaries": [],
    "date_parts": []
  },
  "export_interim": true,
  "normalize_categories": true,
  "export_processed": true,
  "reporting": {
    "manifest_enabled": true
  },
  "target": {
    "name": "Churn",
    "source": "Churn",
    "positive": "Yes",
    "negative": "No"
  },
  "dates": {
    "detect_regex": "(date|data|dt_|_dt$|_date$|_at$|time|timestamp|created|updated)",
    "explicit_cols": [],
    "dayfirst": false,
    "utc": false,
    "formats": [],
    "min_ratio": 0.8,
    "report_path": "date_parse_report.csv"
  },
  "artifacts_dir": "artifacts",
  "data_raw_dir": "data/raw",
  "data_processed_dir": "data/processed",
  "data_processed_file": "processed.parquet",
  "target_column": "Churn",
  "test_size": 0.2,
  "random_state": 42,
  "class_map": {
    "Yes": 1,
    "No": 0
  },
  "encoding": {
    "enabled": true,
    "strategy": "onehot",
    "drop_first": false,
    "exclude": ["Churn", "customerID"]
  },
  "scaling": {
    "enabled": false,
    "strategy": "standard",
    "exclude": ["Churn"]
  },
  "null_fill_with_flag": {
    "enabled": true,
    "numeric_fill": 0,
    "categorical_fill": "__MISSING__",
    "cols_numeric_zero": ["TotalCharges", "avg_charge_per_month"],
    "flag_suffix": "_was_missing",
    "report_relpath": "nulls/fill_summary.csv"
  }

}